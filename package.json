{
  "name": "intershack-website",
  "version": "1.0.0",
  "description": "Intershack - Jay Peak Vermont Skiing & Social Group Website",
  "scripts": {
    "dev": "npm-run-all --parallel dev:hugo dev:tailwind",
    "dev:hugo": "hugo server -D",
    "dev:tailwind": "tailwindcss -i ./themes/intershack/assets/css/main.css -o ./themes/intershack/assets/css/style.css --watch",
    "build": "npm run tailwind:prod && hugo --gc --minify",
    "build:preview": "npm run tailwind:prod && hugo --gc --minify -b $DEPLOY_PRIME_URL",
    "build:production": "npm run tailwind:prod && hugo --gc --minify",
    "start": "hugo server",
    "tailwind:prod": "tailwindcss -i ./themes/intershack/assets/css/main.css -o ./themes/intershack/assets/css/style.css --minify"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  }
}
